<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddFilm">

    <!--Edit text to enter course name-->
    <EditText
        android:id="@+id/FilmTitleTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Film Title" />

    <!--edit text to enter course duration-->
    <EditText
        android:id="@+id/FilmWatchCountTextInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="How many times have you seen this film?" />

    <!--button for adding new course-->
    <Button
        android:id="@+id/AddFilmBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add Film"
        android:textAllCaps="true" />

</LinearLayout>
